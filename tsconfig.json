{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@assets/*": ["./assets/*"],
      "@pages/*": ["./pages/*"],
      "@context/*": ["./context/*"],
      "@constants/*": ["./constants/*"]
    },
    "jsx": "react-jsx",
    "target": "ES2015",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "index.tsx", "./jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}
